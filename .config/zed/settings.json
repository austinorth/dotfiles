// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "agent": {
    "profiles": {
      "copilot-write": {
        "name": "Copilot-Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_profile": "ask",
    "dock": "left",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "file_types": {
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml",
      "**/runners/**/*.yaml",
      "**/runners/**/*.yml"
    ],
    "Dockerfile": ["Dockerfile*"]
  },
  // VIM SETTINGS
  "vim_mode": true,
  // disable cursor blink
  "cursor_blink": false,
  // prevent the buffer from scrolling beyond the last line
  "scroll_beyond_last_line": "off",
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  // disable auto indent on paste
  "auto_indent_on_paste": false,
  "message_editor": {
    "gutter": {
      "line_numbers": false,
      "folds": true
    }
  },
  "gutter": {
    "line_numbers": true,
    "folds": false
  },

  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "preferred_line_length": 80,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "Hack Nerd Font Mono",
  "terminal": {
    "font_family": "Hack Nerd Font",
    "font_size": 14,
    "font_features": {
      "liga": false
    },
    "blinking": "on",
    "line_height": "standard"
  },
  "project_panel": {
    "dock": "right"
  },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },
  "languages": {
    "JavaScript": {
      "format_on_save": "off"
    },
    "Python": {
      "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Terraform": {
      "formatter": {
        "external": {
          "command": "tofu",
          "arguments": ["fmt", "-"]
        }
      }
    },
    "PHP": {
      "format_on_save": "off"
    },
    "Shell Script": {
      "tab_size": 2
    },
    "YAML": {
      "auto_indent_on_paste": false,
      "formatter": "language_server",
      "tab_size": 2,
      "format_on_save": "off"
    },
    "Helm": {
      "auto_indent_on_paste": false
    }
  },
  "lsp": {
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "schemaStore": {
            "enable": true
          },
          "format": {
            "bracketSpacing": false
          }
        }
      }
    },
    "terraform-ls": {
      "binary": {
        "path": "/opt/homebrew/bin/tofu"
      }
    },
    "helm-ls": {
      "binary": {
        "path": "/opt/homebrew/bin/helm-ls"
      }
    }
  }
}
